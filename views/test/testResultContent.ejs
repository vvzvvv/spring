    function countScore(){
        var questions = document.querySelectorAll('input[type=radio]:checked');
        var questionScore = 0;
        questions.forEach(function(question) {
            questionScore += Number(question.value);
        });
        
        document.getElementsByClassName("score-describe")[0].innerHTML = questionScore + "점";
    }

    let today = new Date();
    let year = today.getFullYear(); // 년도
    let month = (today.getMonth() + 1).toString().padStart(2, '0'); //월
    let date = today.getDate().toString().padStart(2, '0');  // 날짜
    
    let todayString = year + "." + month + "." + date;

    document.addEventListener("DOMContentLoaded", function() {
        document.getElementsByClassName("test-date")[0].innerHTML = todayString;

        function selectRadioButton(number, value) {
            const stringNumber = `question${number}`;
            const radioButton = document.querySelector(`input[name="${stringNumber}"][value="${value}"]`);
            if (radioButton) {
                radioButton.checked = true;
            }
        }

        var testResult = document.getElementById("testResult").defaultValue;
        testResult = JSON.parse(testResult);
        if(testResult){
            for(var i = 1; i<10; i++){
                selectRadioButton(i, testResult.result[i-1]);
            }

            document.getElementsByClassName("test-date")[0].innerHTML = testResult.test_date.replaceAll('-','.');

            let resultData;

            if(testResult.total_score<=4) resultData = result[0];
            else if(testResult.total_score<=9) resultData = result[1];
            else if(testResult.total_score<=14) resultData = result[2];
            else if(testResult.total_score<=19) resultData = result[3];
            else resultData = result[4];

            document.getElementsByClassName("score-describe")[0].innerHTML = testResult.total_score;
            document.getElementsByClassName("result-title")[0].innerHTML = resultData.title;
            document.getElementsByClassName("result-content")[0].innerHTML = resultData.resultContent;
        }
        
        const button = document.querySelector('.add-button');
        button.addEventListener('click', function() {
            window.location.pathname = `test`;
        });
    });
</script>

